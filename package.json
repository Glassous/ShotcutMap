{
  "name": "shortcutmap",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.1.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "vite": "^7.1.7",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1"
  },
  "build": {
  "appId": "com.shortcutmap.app",
  "productName": "ShortcutMap",
  "npmRebuild": false,
  "electronDownload": {
    "mirror": "https://npmmirror.com/mirrors/electron/"
  },
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "src/**/*"
  ],
  "mac": {
    "icon": "src/assets/icons/ShortcutMap.png",
    "category": "public.app-category.productivity"
  },
  "win": {
    "icon": "src/assets/icons/ShortcutMap.png",
    "target": "nsis"
  },
  "linux": {
    "icon": "src/assets/icons/ShortcutMap.png",
    "target": "AppImage"
  }
}

}
